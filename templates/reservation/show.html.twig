{% extends 'base.html.twig' %}

{% block title %}Reservation{% endblock %}

{% block body %}
    <h1>Détails de la réservation</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ reservation.id }}</td>
            </tr>
            <tr>
                <th>Nom complet</th>
                <td>{{ reservation.nomComplet }}</td>
            </tr>
            <tr>
                <th>Date de départ</th>
                <td>{{ reservation.dateDepart ? reservation.dateDepart|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Ville de départ</th>
                <td>{{ reservation.villeDepart }}</td>
            </tr>
            <tr>
                <th>Ville d'arrivée</th>
                <td>{{ reservation.villeArrivee }}</td>
            </tr>
            <tr>
                <th>Type de billet</th>
                <td>{{ reservation.typeBillet ? reservation.typeBillet.nom : 'Non défini' }}</td> <!-- Ajout du type de billet -->
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_reservation_index') }}">Retour à la liste</a>

    <a href="{{ path('app_reservation_edit', {'id': reservation.id}) }}">Modifier</a>

    {{ include('reservation/_delete_form.html.twig') }}
{% endblock %}
